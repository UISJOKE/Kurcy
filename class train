    # Грузовой поезд
    bagt.people = 0
    bagt.bagage = 0
    bagt.come_in()
    print('Человек в составе: ' + str(bagt.people))
    bagt.bagage_in()
    print('Багажа: ' + str(bagt.bagage))
    bagt.bagage_out()
    print('Багажа: ' + str(bagt.bagage))
    bagt.bagage_in()
    print('Багажа: ' + str(bagt.bagage))
    bagt.bagage_out()
    print('Багажа: ' + str(bagt.bagage))
